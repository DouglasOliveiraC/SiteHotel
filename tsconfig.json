{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [ "src/*" ]
    },
    "types": [ "vite/client" ],
    "allowJs": true,
    "checkJs": false
  },
  "include": [ "src/**/*", "src/server.js", "src/supabaseClient.js", "src/utils/supabase-client.js" ],
  "exclude": [ "node_modules", "dist" ]
}